; vim:ft=dosini

[colors]
bg = #000
active-bg = #285577
active-border = #4c7899
active-text = #fff
urgent-bg = #900
urgent-border = #c74e4e
inactive-bg = #222
inactive-text = #888

[bar/foo]
width = 100%
height = 22
offset-x = 0
offset-y = 0
background = ${colors.bg}
foreground = ${colors.active-text}
radius = 0.0
line-size = 3
line-color = ${colors.active-bg}
border-size = 0
padding = 0
module-margin = 1
dpi-x = 0
dpi-y = 0
enable-ipc = true

font-0 = Terminus:pixelsize=17
font-1 = Symbola:size=12:weight=bold
font-2 = FontAwesome:size=12

separator = %{F#888}|%{F-}

tray-position = right
tray-detached = false
tray-background = ${colors.bg}
tray-padding = 1

wm-restack = i3
modules-left = i3
modules-center = music
modules-right = ssh-vpn irc battery backlight pulseaudio cpu date

[module/i3]
type = internal/i3
format = <label-state><label-mode>
label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.urgent-bg}
label-mode-underline = ${colors.urgent-border}
label-focused = %name%
label-focused-foreground = ${colors.active-text}
label-focused-background = ${colors.active-bg}
label-focused-underline = ${colors.active-border}
label-focused-padding = 1
label-unfocused = %name%
label-unfocused-foreground = ${colors.inactive-text}
label-unfocused-background = ${colors.inactive-bg}
label-unfocused-padding = 1
label-visible = %name%
label-visible-underline = #555555
label-visible-padding = 1
label-urgent = %name%
label-urgent-foreground = ${colors.active-text}
label-urgent-background = ${colors.urgent-bg}
label-urgent-underline = ${colors.urgent-border}
label-urgent-padding = 1

[module/ssh-vpn]
type = custom/script
exec = ~/.config/polybar/ssh-vpn-status.sh
tail = true
double-click-left = ~/.config/polybar/ssh-vpn-toggle.sh

[module/irc]
type = custom/script
exec = ~/.config/polybar/irc_status.py
tail = true
click-left = i3-msg scratchpad show

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
label = %percentage%%
ramp-0 = "🌕"
ramp-1 = "🌔"
ramp-2 = "🌓"
ramp-3 = "🌒"
ramp-4 = "🌑"
ramp-font = 1

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 30
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage:2%%
label-discharging = %percentage:2%%
label-full = %percentage:2%%
animation-charging-0 = ""
animation-charging-font = 1
ramp-capacity-0 = "%{F#f00}%{F-}"
ramp-capacity-1 = "%{F#f90}%{F-}"
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""
ramp-capacity-font = 1

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 10
format-volume = <ramp-volume> <label-volume>
format-muted = %{T1}🔇%{T-} <label-muted>
format-muted-foreground = #666
label-muted = %percentage:2%%
label-volume = %percentage:2%%
ramp-volume-0 = "🔈"
ramp-volume-1 = "🔉"
ramp-volume-2 = "🔊"
ramp-volume-font = 1
click-left = ~/bin/volume -x 100 -P -e 1000 -p -n mute

[module/music]
type = custom/script
interval = 5
format-prefix = "%{F#1db954}%{F-} "
format = <label>
exec = python3 ~/.config/polybar/music.py -t 60
format-underline = #1db954
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.clementine /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

[module/date]
type = internal/date
interval = 30
date = %a %d %b %H:%M
date-alt = %a. %Y-%m-%d %H:%M:%S
format = %{F#aaa}%{F-} <label>
label = %date%

[module/cpu]
type = internal/cpu
interval = 5
format = <ramp-load> <label>
label = %percentage:2%%
ramp-load-0 = ""
ramp-load-1 = ""
ramp-load-1-foreground = #fc0
ramp-load-2 = ""
ramp-load-2-foreground = #f00
ramp-load-font = 2
