# Up and Down keys can be used to search through history
"\e[A": history-search-backward
"\e[B": history-search-forward

# Use ctrl + arrows to move from word to word
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# Use alt + backspace to delete previous word
Meta-RUBOUT: backward-kill-word
# Use ctrl + delete to delete current word
"\e[3;5~": kill-word

# Completion becomes case insensitive
#set completion-ignore-case on

# Adds / @ and * after the completion proposals
# this allows to differentiate files from directories for example
set visible-stats on
set colored-stats on
set colored-completion-prefix on
set input-meta   on
set output-meta  on
set convert-meta off
set bell-style none
