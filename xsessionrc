# vim: ft=sh

# key repeat rate, 200ms delay, 40 repeats/sec.
xset r rate 200 40

# disable screen saver
xset s off

# energy saving (standby=10min, suspend=1h, off=2h)
xset dpms 600 3600 7200

# mouse speed (ratio threshold)
xset mouse 3/2 0

# enable numlock when starting X
numlockx on

# apply user Xmodmap
xmodmap ~/.Xmodmap
