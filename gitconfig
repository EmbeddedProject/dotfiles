# vim: ft=gitconfig

[user]
	email = robin.jarry@6wind.com
	name = Robin Jarry

[core]
	editor = vim
	excludesfile = /usr/home/jarry/.gitfiles/gitignore
	abbrev = 12
	pager = less -RSFX

[diff]
	algorithm = minimal
	renames = copies
	indentHeuristic = true

[pretty]
	fixes = Fixes: %h (\"%s\")
	line = %C(auto)%h %C(auto,cyan)%ad %C(auto,magenta)%<(10,trunc)%an%C(auto)%d %C(auto,reset)%s

[sendemail]
	suppressfrom = true
	chainreplyto = false
	confirm = always
	envelopesender = auto
	smtpuser = robin.jarry@6wind.com
	smtpserver = smtp.gmail.com
	smtpserverport = 465
	smtpencryption = ssl

[color]
	diff = auto
	ui = auto

[color "grep"]
	filename = magenta

[color "grep-all-components"]
	filename = magenta
	component = green
	branch = reset

[color "find-all-components"]
	branch = magenta
	component = green

[alias]
	chpick = cherry-pick -sxe
	s = status --short --branch
	g = grep
	ri = rebase -i
	ra = rebase --abort
	rc = rebase --continue
	ci = commit -s
	ca = commit --amend
	can = commit --amend --no-edit
	co = checkout
	a = add -u
	l = log --pretty=line --date=short
	lfixes = log --pretty=fixes
	web = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-web
	wip = commit -asm 'wip'
	grep-all-components = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-grep-all-components
	grep-all-branches = !git branch -r | grep -v -- '->' | xargs git grep
	find-all-components = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-find-all-components
	components = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-components
	list-pr = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-list-pr
	remote-add-backport = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-remote-add-backport
	w = !/aston/h_debit/deliveries/infrastructure/git-tools/scripts/git-web add

[url "git://scm/"]
	InsteadOf = "/aston/h_debit/scm/git/projects/"

[url "git@scm:projects/"]
	pushInsteadOf = "git://scm/"

[url "git@scm:projects/"]
	pushInsteadOf = "/aston/h_debit/scm/git/projects/"

[log]
	decorate = true

[pull]
	rebase = true

[push]
	default = nothing

[gitweb]
	projectroot = /usr/home/jarry/.gitweb
	urlprefix = /gitweb/
	showbranch = true

[uploadArchive]
	allowUnreachable = true
