# vim: ft=gitconfig

[user]
	email = robin.jarry@6wind.com
	name = Robin Jarry

[core]
	editor = vim
	excludesfile = /usr/home/jarry/.gitfiles/gitignore
	abbrev = 12
	pager = less -RSFX

[diff]
	algorithm = histogram
	findrenames = true
	findcopies = true
	indentHeuristic = true

[pretty]
	fixes = Fixes: %h (\"%s\")

[sendemail]
	suppressfrom = true
	chainreplyto = false
	confirm = always
	envelopesender = auto
	smtpuser = robin.jarry@6wind.com
	smtpserver = smtp.gmail.com
	smtpserverport = 465
	smtpencryption = ssl

[color]
	diff = auto
	ui = auto

[color "grep"]
	filename = magenta

[color "grep-all-components"]
	filename = magenta
	component = green
	branch = reset

[alias]
	chpick = cherry-pick -sxe
	s = status --short --branch
	g = grep
	ri = rebase -i
	ra = rebase --abort
	rc = rebase --continue
	ci = commit -s
	ca = commit --amend
	co = checkout
	a = add -u
	l = log --oneline
	lfixes = log --pretty=fixes
	w = web add

[url "git://scm/"]
	InsteadOf = "/aston/h_debit/scm/git/projects/"

[url "git@scm:projects/"]
	pushInsteadOf = "git://scm/"

[url "git@scm:projects/"]
	pushInsteadOf = "/aston/h_debit/scm/git/projects/"

[merge]
	tool = p4merge

[log]
	decorate = true

[pull]
	rebase = true

[push]
	default = nothing

[gitweb]
	projectroot = /usr/home/jarry/.gitweb
	urlprefix = /git/
